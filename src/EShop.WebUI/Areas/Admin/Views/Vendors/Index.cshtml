@model EShop.Application.Vendors.Queries.GetVendors.VendorsViewModel
@{
    ViewData["Title"] = "Управление производителями";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Название</th>
        <th>Описание</th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    @foreach(var vendor in Model.Vendors)
    {
        <tr>
            <td>
                <span>
                    @vendor.Name
                </span>
            </td>
            <td>
                <span>
                    @vendor.Description
                </span>
            </td>
            <td>
                <a class="btn btn-danger btn-block" asp-area="Admin" asp-controller="Vendors" asp-action="Delete" asp-route-vendorId="@vendor.Id">
                    Удалить
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a class="btn btn-info" asp-area="Admin" asp-controller="Vendors" asp-action="AddView">
    Добавить производителя
</a>