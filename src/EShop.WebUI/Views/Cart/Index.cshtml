@model EShop.Application.Cart.Queries.GetUserCart.CartViewModel;

@{
    ViewData["Title"] = "Корзина";
}

@if(Model.Products.Length > 0)
{
    <h1>Товары в корзине</h1>
    <h4>Стоимость товаров в корзине: @Model.TotalCost.ToString("C")</h4>

    <partial name="_ProductsTable" model="Model"/>

    <a onclick="ClearCartProduct()" asp-controller="Order" asp-action="MakeOrder"
       class="btn btn-success">
       Оформить заказ
    </a>
}
else
{
    <h3 class="text-center">Ваша корзина пуста.</h3>
    <h5 class="text-center">
        Для добавления товаров в корзину <a asp-controller="Products" asp-action="Index">перейдите в каталог</a>.
    </h5>
}